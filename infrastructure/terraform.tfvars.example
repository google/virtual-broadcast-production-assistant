project_id = "your-gcp-project-id"
region     = "your-gcp-region"

# Orchestrator Environments
# Define the stable and staging environments for the orchestrator agent.
# The 'stable' environment should be the one that was previously production.
# The 'staging' environment is the new one. The staging agent will share the same
# static inbound and outbound IP addresses as the stable one.
orchestrator_environments = {
  stable = {
    service_name    = "orchestrator-agent-stable"
    container_image = "europe-west1-docker.pkg.dev/your-gcp-project-id/orchestrator/agent:stable"
    custom_domain   = "orchestrator.your-domain.com"
  },
  staging = {
    service_name    = "orchestrator-agent-staging"
    container_image = "europe-west1-docker.pkg.dev/your-gcp-project-id/orchestrator/agent:staging"
    custom_domain   = "staging-orchestrator.your-domain.com"
  }
}

# Base name for shared orchestrator resources.
# IMPORTANT: To prevent recreation of existing resources (like static IPs), set this
# to the name of the original orchestrator Cloud Run service.
orchestrator_base_resource_name = "orchestrator-agent"

# Frontend Container Images
# The frontend is deployed as a simple Cloud Run service with a public URL.
frontend_container_image_stable  = "europe-west1-docker.pkg.dev/your-gcp-project-id/orchestrator/frontend-v2:stable"
frontend_container_image_staging = "europe-west1-docker.pkg.dev/your-gcp-project-id/orchestrator/frontend-v2:staging"

# Service Account for Orchestrator
# This service account is used by all orchestrator environments.
orchestrator_service_account_email = "orchestrator-sa@your-gcp-project-id.iam.gserviceaccount.com"

# Service Account for Cloud Build
# This service account is used by Cloud Build to run the deployment pipeline.
orchestrator_build_runner_service_account_email = "cloud-build-runner@your-gcp-project-id.iam.gserviceaccount.com"

# DNS Configuration
# The root domain and managed zone for creating DNS 'A' records for the custom domains.
dns_zone_name = "your-domain-com"
root_domain   = "your-domain.com"

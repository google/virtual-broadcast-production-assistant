	"devDependencies": {
		"@tsconfig/node22": "^22.0.2",
		"@types/node": "^24.2.0",
		"eslint": "^9.32.0",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-import": "^2.32.0",
		"eslint-plugin-n": "^17.21.3",
		"eslint-plugin-prettier": "^5.5.3",
